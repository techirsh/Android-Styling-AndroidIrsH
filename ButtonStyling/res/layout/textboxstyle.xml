<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
        	<gradient
                android:startColor="#aaaaaa"
                android:endColor="#aaaaaa"
                android:angle="45" />
            <stroke
                android:width="4dp"
                android:color="#282a2f" />
            <corners
                android:radius="25dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
        android:angle="270"
        android:centerColor="#999998"
        android:endColor="#c2c2c2"
        android:startColor="#999998"
 />
            <stroke
                android:width="4dp"
                android:color="#282a2f" />
            <corners
                android:topLeftRadius="25dp"
        android:topRightRadius="25dp"
        android:bottomLeftRadius="0dp"
        android:bottomRightRadius="0dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />

        </shape>
    </item>
</selector>